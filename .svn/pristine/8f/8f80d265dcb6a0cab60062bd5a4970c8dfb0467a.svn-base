<div class="pop-city-content">
	<a href="javascript:;" class="layui-layer-close"></a>
	<div class="city-head">
		<div class="current"><b class="icon"></b>当前：<span id="popCityName">北京</span></div>
		<div class="search-panel">
			<div class="search-box">
				<b class="icon"></b>
				<input type="text" placeholder="请输入城市名称" id="searchCityInput" class="search-input" autocomplete="off" maxlength="15">
				<button id="searchCity" class="layui-btn search-btn">搜索</button>
			</div>
			<div class="search-logs hide">
				<span>最近使用：</span>
			</div>
		</div>
	</div>
	

	<div class="city-body">
		<ul class="model-tab model-tab-big">
			<li data-name="province" class="active">省份排序</li>
			<li data-name="letter">字母排序</li>
		</ul>
		
		<div id="cityScrollContent" class="city-content">
			<div class="buy-type">
				<a href="javascript:;" data-name="buy" class="layui-btn layui-btn-primary active">已购买城市</a>
				<a href="javascript:;" data-name="notBuy" class="layui-btn layui-btn-primary">未购买城市</a>
			</div>
			<div class="citylist-content">
				<!-- 已购买按省份排序 -->
				<div class="city-list" data-sort="buyProvince">
					<ul></ul>
				</div>
				<!-- 未购买按省份排序 -->
				<div class="city-list hide" data-sort="notBuyProvince">
					<ul></ul>
				</div>
				<!-- 已购买按字母排序 -->
				<div class="city-list hide" data-sort="buyLetter">
					<ul></ul>
				</div>
				<!-- 未购买按字母排序 -->
				<div class="city-list hide" data-sort="notBuyLetter">
					<ul></ul>
				</div>
			</div>
		</div>


	</div>
</div>